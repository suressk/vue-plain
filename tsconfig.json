{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */

    /* Language and Environment */
    "target": "es2016",
    "lib": ["ESNext", "DOM"],
    "jsx": "preserve",
    "useDefineForClassFields": false,

    /* Modules */
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@vue-plain/*": ["packages/*/src"]
    },
    "resolveJsonModule": true,

    /* JavaScript Support */
    "allowJs": false,

    /* Emit */
    "sourceMap": false,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "packages/*/src"
  ]
}
